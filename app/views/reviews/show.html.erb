<h1>Review Author: <%= @review.author %></h1>
<h2>Review: <%= @review.content_body %></h2>
<h3> Overall Rating: <%= @review.rating %></h3>


<% if current_user.admin %>
<p><%= link_to "Edit review", edit_product_review_path(@product, @review) %></p>
<p><%= link_to "Delete review", product_review_path(@product, @review),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>
 <% else %>
  <p>Admin Only</p>
  <% end %>

<p><%= link_to "Return to product", product_path(@product) %></p>
